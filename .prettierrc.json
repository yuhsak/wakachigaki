{
  "arrowParens": "always",
  "bracketSpacing": true,
  "jsxSingleQuote": true,
  "printWidth": 80,
  "quoteProps": "as-needed",
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false,
  "overrides": [
    {
      "files": ["*.md", "README"],
      "options": { "parser": "markdown-nocjsp" }
    },
    {
      "files": ["*.mdx"],
      "options": { "parser": "mdx-nocjsp" }
    }
  ]
}
